<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <artifactId>dtm-query-execution-core</artifactId>
    <version>5.4.0</version>
    <packaging>jar</packaging>
    <name>DTM Core</name>

    <parent>
        <groupId>ru.datamart.prostore</groupId>
        <artifactId>parent</artifactId>
        <version>5.4.0</version>
    </parent>

    <properties>
        <curator-test.version>2.12.0</curator-test.version>
        <netty-transport-native-epoll.version>4.1.19.Final</netty-transport-native-epoll.version>
    </properties>

    <dependencies>
        <!-- DTM -->
        <dependency>
            <groupId>ru.datamart.prostore</groupId>
            <artifactId>dtm-common</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>ru.datamart.prostore</groupId>
            <artifactId>dtm-query-execution-plugin-api</artifactId>
            <version>${project.version}</version>
            <exclusions>
                <exclusion>
                    <groupId>ru.datamart.prostore</groupId>
                    <artifactId>dtm-common</artifactId>
